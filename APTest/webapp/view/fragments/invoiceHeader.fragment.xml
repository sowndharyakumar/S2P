		<!--Invoice Header Details :: START-->
		<Panel class="inctureAmountGridClass incutrePanelPaddingClass invoiceHeaderClass invoiceHeaderMarginClass" expandable="true"
			expanded="{oPropertyModel>/oConfigurableProperties/bInvoiceHeaderExpanded}" id="headerPanelId">
			<headerToolbar>
				<Toolbar>
					<content>
						<Label text="{i18n>invoiceHeader}" class="inctureFormHeaderClass"></Label>
						<ToolbarSpacer></ToolbarSpacer>
						<MessageStrip text="Please validate Invoice due amount" type="Error" enableFormattedText="true" showIcon="true"
							visible="{path:'oInvoiceModel>/oInvoiceHeaderDetails/balance', formatter:'ui.incture.APTest.util.Formatter.balanceMsg' }" class="sapUiSizeCompact"></MessageStrip>
						<!--<Button icon="sap-icon://inspection" tooltip="{i18n>showMoreDetails}" class="inctureIsnpectionIconClass" press="fnMoreInvHeaderDetails"></Button>-->
						<Button type="Emphasized" icon="sap-icon://message-popup" press="onOpenMessage" tooltip="Messages" class="dynamicCls">
							<customData>
								<BadgeCustomData key="badge" value="{oInvoiceModel>/messageCount}" visible="true"/>
							</customData>
						</Button>
						<Button type="Emphasized" icon="sap-icon://attachment" press="onOpenAttachment" tooltip="Attachments" class="dynamicCls">
							<customData>
								<BadgeCustomData key="badge" value="{attachmentModel>/count}" visible="true"/>
							</customData>
						</Button>
						<Button type="Emphasized" icon="sap-icon://comment" press="onOpenComment" tooltip="{18n>Comments}" class="dynamicCls">
							<customData>
								<BadgeCustomData key="badge" value="{oInvoiceModel>/commentsCount}" visible="true"/>
							</customData>
						</Button>
						<Button type="Emphasized" press="onDemandPDF" id="idOpenPDFBtn" text="{i18n>pdf}" enabled="{oPropertyModel>/bPdfBtn}"
							tooltip="{i18n>OpenPDF}"></Button>
						<!--<SegmentedButton selectedKey="PO" visible="{oPropertyModel>/oConfigurableProperties/bPoNonPoRequired}">-->
