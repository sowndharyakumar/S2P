						</layoutData>
					</HBox>
					<HBox class="inboxHeaderCls">
						<Label text="{i18n>duedate}" design="Bold" width="9rem" class="sapUiTinyMarginTop"></Label>
						<DatePicker editable="{oInvoiceModel>/posted}" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd" width="10rem"
							value="{oInvoiceModel>/oInvoiceHeaderDetails/dueDate}" class="disablekb"></DatePicker>
						<layoutData>
							<l:GridData visibleXL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowBaselineDate}"
								visibleL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowBaselineDate}" visibleM="{oPropertyModel>/oInvHeaderFieldsConfig/bShowBaselineDate}"></l:GridData>
						</layoutData>
					</HBox>
					<!--<HBox class="inboxHeaderCls">-->
					<!--	<Label text="{i18n>invoiceTax}" design="Bold" width="9rem" class="sapUiTinyMarginTop"></Label>-->
