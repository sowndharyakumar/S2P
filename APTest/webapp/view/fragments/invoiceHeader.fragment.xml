						<!--</layoutData>-->
					</HBox>
					<HBox class="inboxHeaderCls">
						<Label text="{i18n>paymentTerms}" design="Bold" width="9rem" class="sapUiTinyMarginTop"></Label>
						<Select enabled="{oInvoiceModel>/posted}" width="10rem" class="dropDownCss" forceSelection="false"
							items="{oAutomationSerModel>/paymentTerm}">
							<items>
								<core:ListItem text="{oAutomationSerModel>PaymentTerms}" additionalText="{oAutomationSerModel>PaymentTermsDesc}"></core:ListItem>
							</items>
						</Select>
