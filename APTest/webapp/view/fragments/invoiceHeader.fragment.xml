								<!--	<Label text="{i18n>searchTerm}"/>-->
								<!--</Column>-->
							</suggestionColumns>
							<suggestionRows>
								<ColumnListItem>
									<cells>
										<Text text="{path:'suggestionModel>Vendor', formatter:'ui.incture.APTest.util.Formatter.removeZero'}" wrapping="true"/>
										<Text text="{suggestionModel>Name1}" wrapping="true"/>
										<!--<Text text="{suggestionModel>Name2}" wrapping="true"/>-->
										<!--<Text text="{oVendorSuggestionModel>Name3}" wrapping="true"/>-->
										<!--<Text text="{oVendorSuggestionModel>Name4}" wrapping="true"/>-->
										<!--<Text text="{suggestionModel>Search_term}" wrapping="true"/>-->
									</cells>
								</ColumnListItem>
							</suggestionRows>
						</Input>
						<!--<Button icon="sap-icon://home" tooltip="{i18n>showVendorAddress}" class="inctureIsnpectionIconClass sapUiSmallMarginLeft"></Button>-->
						<!--<Button icon="sap-icon://inspection" tooltip="{i18n>showMoreVendorDetails}" class="inctureIsnpectionIconClass"></Button>-->
						<!--Vendor Running Search Integration :: END-->
					</HBox>
					<HBox class="inboxHeaderCls">
						<Label text="{i18n>CCode}" design="Bold" width="9rem" class="sapUiTinyMarginTop"></Label>
						<Input width="10rem" value="{oInvoiceModel>/oInvoiceHeaderDetails/compCode}" editable="{oInvoiceModel>/posted}"></Input>
					</HBox>
					<HBox class="inboxHeaderCls">
						<Label text="{i18n>currency}" design="Bold" width="9rem" class="sapUiTinyMarginTop"></Label>
						<!--<Text text="{oInvoiceModel>/oInvoiceHeaderDetails/currency}" width="10rem"/>-->
						<Input enabled="{oPropertyModel>/bNonEditableField}" editable="{oInvoiceModel>/posted}" width="10rem"
							value="{oInvoiceModel>/oInvoiceHeaderDetails/currency}"></Input>
						<layoutData>
							<l:GridData visibleXL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowCurrency}"
								visibleL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowCurrency}" visibleM="{oPropertyModel>/oInvHeaderFieldsConfig/bShowCurrency}"></l:GridData>
						</layoutData>
					</HBox>
					<HBox class="inboxHeaderCls">
						<Label text="{i18n>invoiceRef}" design="Bold" width="9rem" class="sapUiTinyMarginTop" required="true"></Label>
						<Input width="10rem" editable="{oInvoiceModel>/posted}" value="{oInvoiceModel>/oInvoiceHeaderDetails/extInvNum}"></Input>
						<layoutData>
							<l:GridData visibleXL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowInvRef}" visibleL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowInvRef}"
								visibleM="{oPropertyModel>/oInvHeaderFieldsConfig/bShowInvRef}"></l:GridData>
						</layoutData>
					</HBox>
