						<!--</layoutData>-->
					</HBox>
					<HBox class="inboxHeaderCls">
						<Label text="{i18n>paymentMethod}" design="Bold" width="9rem" class="sapUiTinyMarginTop"></Label>
						<Select enabled="{oInvoiceModel>/posted}" width="10rem" class="dropDownCss" forceSelection="false"
							items="{oAutomationSerModel>/paymentMethod}">
							<items>
								<core:ListItem text="{oAutomationSerModel>PaymentMethDesc}" additionalText="{oAutomationSerModel>PaymentMeth}"></core:ListItem>
							</items>
