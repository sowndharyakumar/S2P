					<!--	</layoutData>-->
					<!--</HBox>-->
					<HBox class="inboxHeaderCls">
						<Label text="{i18n>docDate}" design="Bold" width="9rem" class="sapUiTinyMarginTop" required="true"></Label>
						<DatePicker editable="{oInvoiceModel>/posted}" displayFormat="yyyy-MM-dd" width="10rem"
							value="{oInvoiceModel>/oInvoiceHeaderDetails/invoiceDate}" class="disablekb"></DatePicker>
						<layoutData>
							<l:GridData visibleXL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowDocDate}"
								visibleL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowDocDate}" visibleM="{oPropertyModel>/oInvHeaderFieldsConfig/bShowDocDate}"></l:GridData>
						</layoutData>
					</HBox>
					<HBox class="inboxHeaderCls">
						<Label text="{i18n>BaselineDate}" design="Bold" width="9rem" class="sapUiTinyMarginTop"></Label>
						<DatePicker editable="{oInvoiceModel>/posted}" displayFormat="yyyy-MM-dd" width="10rem"
							value="{oInvoiceModel>/oInvoiceHeaderDetails/oBaselineDate}" class="disablekb"></DatePicker>
						<layoutData>
							<l:GridData visibleXL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowBaselineDate}"
