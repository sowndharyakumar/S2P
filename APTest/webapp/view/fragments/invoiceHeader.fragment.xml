					<HBox class="inboxHeaderCls">
						<Label text="{i18n>paymentBlock}" design="Bold" width="9rem" class="sapUiTinyMarginTop"></Label>
						<Select enabled="{oInvoiceModel>/posted}" width="10rem" class="dropDownCss" forceSelection="false"
							items="{oAutomationSerModel>/paymentBlock}">
							<items>
								<core:ListItem text="{oAutomationSerModel>PaymentBlockDesc}" additionalText="{oAutomationSerModel>PaymentBlock}"></core:ListItem>
							</items>
						</Select>
						<!--<layoutData>-->
						<!--	<l:GridData visibleXL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowPaymentBlock}"-->
						<!--		visibleL="{oPropertyModel>/oInvHeaderFieldsConfig/bShowPaymentBlock}" visibleM="{oPropertyModel>/oInvHeaderFieldsConfig/bShowPaymentBlock}"></l:GridData>-->
						<!--</layoutData>-->
					</HBox>
				</l:content>
			</l:Grid>
		</Panel>
		<!--Invoice Header Details :: END-->
	</VBox>
</core:FragmentDefinition>