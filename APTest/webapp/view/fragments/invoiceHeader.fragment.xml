						<Label text="{i18n>postingDate}" design="Bold" width="9rem" class="sapUiTinyMarginTop" required="true"></Label>
						<DatePicker editable="{oInvoiceModel>/posted}" width="10rem" change="onPostingDateChange"
							value="{path:'oInvoiceModel>/oInvoiceHeaderDetails/postingDate', formatter: 'ui.incture.APTest.util.Formatter.getDate'}"
