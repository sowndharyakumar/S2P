						<!--	</items>-->
						<!--</SegmentedButton>-->
					</content>
					<layoutData>
						<l:GridData span="L12 M12 S12"/>
					</layoutData>
				</Toolbar>
			</headerToolbar>
			<!-- To be changed in case of Split Screen :: defaultSpan = L4 M12 S12 -->
			<l:Grid defaultSpan="L3 M6 S12" id="idHeaderGridPartTwo" class="inctureGridClass">
				<l:content>
					<HBox class="inboxHeaderCls">
						<Label text="{i18n>docType}" design="Bold" width="9rem" class="sapUiTinyMarginTop"></Label>
						<Select forceSelection="false" width="10rem" selectedKey="{oInvoiceModel>/oInvoiceHeaderDetails/invoiceType}" class="dropDownCss"
							enabled="{oInvoiceModel>/posted}">
							<items>
								<core:Item key="INVOICE" text="INVOICE"/>
								<core:Item key="Credit Memo" text="Credit Memo"/>
								<core:Item key="Debit Memo" text="Debit Memo"/>
								<core:Item key="Subsequent Credit/Debit" text="Subsequent Credit/Debit"/>
							</items>
						</Select>
					</HBox>
					<HBox class="inboxHeaderCls">
						<Label text="{i18n>vendor}" design="Bold" width="9rem" class="sapUiTinyMarginTop" required="true"></Label>
						<!--Vendor Running Search Integration :: START-->
						<Input showSuggestion="true" suggest="fnVendorSuggestion" showTableSuggestionValueHelp="false" class="inputPopCls"
							value="{oInvoiceModel>/oInvoiceHeaderDetails/vendorId}-{oInvoiceModel>/oInvoiceHeaderDetails/vendorName}" editable="{oInvoiceModel>/posted}"
							suggestionRows="{suggestionModel>/d/results}" change="chkSelectedVendor" suggestionItemSelected="fnVendorSelected" width="10rem"
							maxSuggestionWidth="50rem" filterSuggests="false" enableSuggestionsHighlighting="true">
							<suggestionColumns>
								<Column hAlign="Begin" popinDisplay="Inline" demandPopin="true">
									<Label text="{i18n>vendorId}"/>
								</Column>
								<Column hAlign="Center" popinDisplay="Inline" demandPopin="true" minScreenWidth="Tablet">
									<Label text="{i18n>nameOne}"/>
								</Column>
								<!--<Column hAlign="Center" popinDisplay="Inline" demandPopin="true" minScreenWidth="Tablet">-->
								<!--	<Label text="{i18n>nameTwo}"/>-->
								<!--</Column>-->
								<!--<Column hAlign="End" popinDisplay="Inline" demandPopin="true" minScreenWidth="Tablet">-->
